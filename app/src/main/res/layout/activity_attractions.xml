<?xml version="1.0" encoding="utf-8"?>
<!-- activity_attractions_page.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttractionsPageActivity">

    <include layout="@layout/menu" />


    <ScrollView
        android:layout_marginTop="73dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ExtraText">

            <View
                android:id="@+id/viewPinkBackground"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/primary_pink" />

            <TextView
                android:id="@+id/textViewAttractionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/viewPinkBackground"
                android:layout_marginTop="-6dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="The Zachary Foundation Culinary Garden"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewAttraction"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/viewPinkBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/attraction_default" />

            <TextView
                android:id="@+id/textViewAttractionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewAttraction"
                android:padding="16dp"
                android:text="Description of the attraction goes here."
                android:textSize="16sp" />
        </RelativeLayout>

    </ScrollView>

</FrameLayout>


